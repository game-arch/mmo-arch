{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "importHelpers": true,
        "outDir": "../../out-tsc/app",
        "types": [
            "node",
            "phaser"
        ],
        "lib": [
            "es2015",
            "es2018",
            "dom",
            "scripthost"
        ]
    },
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts"
    ],
    "include": [
        "node_modules/phaser/**/*.d.ts"
    ],
    "exclude": [
        "src/test.ts",
        "src/**/*.spec.ts"
    ]
}
